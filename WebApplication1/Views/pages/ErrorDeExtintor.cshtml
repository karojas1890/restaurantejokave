
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error Extintor - JOKAVE</title>
    <link rel="stylesheet" href="~/css/ErrorDeExtintor.css" asp-append-version="true"/>
</head>
<body>
    <div class="container">
        <div class="notification-card">
            <div class="hourglass-icon">⏳</div>
            <div class="notification-text">
                <h2>Utilizando el extintor</h2>
                <p>Se activó el extintor</p>
            </div>
