
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Éxito Extintor - JOKAVE</title>
    <link rel="stylesheet" href="~/css/ExitoDeExtintor.css" asp-append-version="true"/>
</head>
<body>
    <div class="container">
        <div class="notification-card">
            <div class="hourglass-icon">⏳</div>
            <div class="notification-text">
                <h2>Activando el extintor</h2>
                <p>Se activó el extintor disponible en el recinto afectado</p>
            </div>
        </div>

        <div class="success-container">
            <span class="success-icon">✓</span>
            <div class="success-message">
                ¡Acción exitosa! El incidente ha sido controlado satisfactoriamente.
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">⚡</div>
                <div class="stat-content">
                    <h3>Eficiencia del equipo</h3>
                    <div class="stat-value">-15%</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">⚙️</div>
                <div class="stat-content">
                    <h3>Equipo dañado</h3>
                    <div class="stat-value">2 unidades</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">💰</div>
                <div class="stat-content">
                    <h3>Impacto económico</h3>
                    <div class="stat-value">-500000</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">👥</div>
                <div class="stat-content">
                    <h3>Indicadores del personal</h3>
                    <div class="stat-value">-85% general</div>
                </div>
            </div>
        </div>

        <button class="continue-button">Continuar</button>
    </div>
</body>
</html>