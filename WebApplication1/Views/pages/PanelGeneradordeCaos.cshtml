@{
    ViewData["Title"] = "PanelGeneradordeCaos";
    Layout = "_LayoutGeneradordeCaos";
}
    <!-- Subtítulo -->
<h3 class="text-center mt-3" style="color: #1A3F37; font-family: 'Playfair Display' , serif; font-style: italic; font-weight: 700;font-size: 30px;">Control de simulación</h3>

    <!-- Controles principales -->
<div style="font-family: 'Poppins', sans-serif; font-size: 20px; background-color: white;">
    <div class="d-flex justify-content-center align-items-center gap-4 flex-wrap border border-success p-3 rounded mt-3">
        <button class="btn btn-danger"><i class="fas fa-pause"></i> Pausar</button>
        <button class="btn btn-light border"><i class="fas fa-clock"></i> Reset</button>
        <div>
            <span>Acciones de caos activas:</span>
            <input type="text" class="form-control d-inline-block mx-2" style="width: 50px;" value="0" readonly>
        </div>
        <div>
            <span>Tiempo hasta el colapso:</span>
            <input type="text" class="form-control d-inline-block mx-2" style="width: 100px;" value="--:--" readonly>
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center gap-4 flex-wrap border border-success p-3 rounded mt-3">
            <!-- Tarjeta 1 -->
            <div class="metric-card border border-success rounded shadow-sm text-center p-3">
                <i class="fas fa-sliders-h fa-2x text-secondary mb-2"></i>
                <p class="mb-1">Caos general</p>
                <h5 class="text-secondary">10 %</h5>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-primary" style="width: 10%;"></div>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="metric-card border border-success rounded shadow-sm text-center p-3">
                <i class="fas fa-users fa-2x text-success mb-2"></i>
                <p class="mb-1">Satisfacción del cliente</p>
                <h5 class="text-success">70 %</h5>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-success" style="width: 70%;"></div>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="metric-card border border-success rounded shadow-sm text-center p-3">
                <i class="fas fa-user-nurse fa-2x text-primary mb-2"></i>
                <p class="mb-1">Estado del personal</p>
                <h5 class="text-primary">40 %</h5>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-primary" style="width: 40%;"></div>
                </div>
            </div>

            <!-- Tarjeta 4 -->
            <div class="metric-card border border-success rounded shadow-sm text-center p-3">
                <i class="fas fa-utensils fa-2x text-warning mb-2"></i>
                <p class="mb-1">Eficiencia de la cocina</p>
                <h5 class="text-warning">60 %</h5>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar bg-warning" style="width: 60%;"></div>
                </div>
            </div>

            <!-- Tarjeta 5 -->
            <div class="metric-card border border-success rounded shadow-sm text-center p-3">
                <i class="fas fa-clock fa-2x text-info mb-2"></i>
                <p class="mb-1">Tiempo al colapso</p>
                <h5 class="text-info">5 min</h5>
                <p>30 s</p>
            </div>
        </div>    
</div>
<div class="d-flex flex-wrap justify-content-center">
    <div class="card border-success p-3 m-2 text-center" style="width: 220px; border-radius: 15px;">
        <h6 style="font-weight: 700;">Llegada masiva de clientes</h6>
        <small class="text-muted">20 clientes llegan al mismo tiempo</small>

        <div class="row text-center my-2">
            <div class="col-6">
                <div class="text-success" style="font-size: 14px;">
                    <i class="fas fa-users"></i> <br> -20%
                </div>
            </div>
            <div class="col-6">
                <div class="text-primary" style="font-size: 14px;">
                    <i class="fas fa-user-nurse"></i> <br> -30%
                </div>
            </div>
            <div class="col-6 mt-2">
                <div class="text-warning" style="font-size: 14px;">
                    <i class="fas fa-utensils"></i> <br> -20%
                </div>
            </div>
            <div class="col-6 mt-2">
                <div class="text-purple" style="font-size: 14px;">
                    <i class="fas fa-sliders-h"></i> <br> -20%
                </div>
            </div>
        </div>

        <div class="my-2">
            <small>Duración:</small>
            <input type="number" class="form-control form-control-sm d-inline-block" style="width: 60px;" value="30"> s
        </div>

        <button class="btn btn-danger w-100">
            <i class="fas fa-bomb"></i> ACTIVAR
        </button>
    </div>

</div>



